<!-- Password recovery, create new password-->
<h1 class="dialog-header text-center bxi-ff-secondary fw-bold mb-4">Password recovery</h1>
<form class="dialog-container bxi-color-light" id="passwordRecoveryForm">
  <p class="text-center bx-4">
    Create new strong password
  </p>
  <div class="mb-3">
    <label for="password" class="form-label mb-1">New password</label>
    <input type="text" id="password" name="password" class="form-control" />
    <div data-skcomponent="skerrormessage" class="text-danger" data-skerrorid="password"></div>
  </div>
  <div class="mb-4">
    <label for="confirmPassword" class="form-label mb-1">Confirm new password</label>
    <input type="text" id="confirmPassword" name="confirmPassword" class="form-control" />
    <div data-skcomponent="skerrormessage" class="text-danger" data-skerrorid="confirmPassword"></div>
  </div>
  <button class="bxi-button bxi-button--lg bxi-button--submit d-block mx-auto mb-4" data-skcomponent="skbutton" data-skbuttontype="form-submit" data-skform="passwordRecoveryForm" data-skbuttonvalue="exampleButtonValue">Create</button>
</form>
<!--/ Password recovery, create new password-->