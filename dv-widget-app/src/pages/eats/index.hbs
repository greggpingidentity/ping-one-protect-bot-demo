<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> eatsBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi eats home">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg p-0">
        <div class="container py-2">
          <div class="bxi-nav">
            <a class="bxi-nav-toggle" role="button">
              {{> hamburgerIcon }}
            </a>
            <ul class="bxi-nav-links bxi-bg-secondary">
              <li>
                <button class="bxi-button rounded-0 d-flex mb-2 px-3 d-xl-none text-nowrap align-items-center bxi-icon-color-white">
                  {{> hamburgerIcon class="me-2"}}{{settings.header.main_link}}
                </button>
              </li>
              {{#each settings.header.links}}
              <li>
                <a class="bxi-link bxi-link-light--primary">{{this}}</a>
              </li>
              {{/each}}
            </ul>
            <a id="bxi-logo" class="navbar-brand py-0 ms-3">
              <img src="{{settings.images.logo}}" alt="Logo" />
            </a>
            <button class="bxi-button rounded-0 d-none d-xl-flex px-3 align-items-center bxi-icon-color-white">
              {{> hamburgerIcon class="me-2"}}{{settings.header.main_link}}
            </button>
          </div>
          <div class="d-flex flex-row position-relative">
            <div class="bxi-user-icon bxi-bg-primary">
              {{> userIcon }}
            </div>
            <div class="bxi-auth-buttons bxi-auth-buttons--outline-light-bg bxi-bg-secondary align-items-center bxi-bg-lg-transparent bxi-zi-2 pb-2 pb-lg-0">
              {{!-- {{> notificationIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary notification-icon" }} --}}
              {{> groceryIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary"}}
              {{> favoriteIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary"}}
              {{!-- See src/home-nav-buttons.hbs to update auth buttons --}}
              {{> homeNavButtons}}
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-banner__image bxi-bg-image position-relative d-flex align-items-end" style="background-image: url('{{settings.home_page.banner.image}}')">
      <div class="bxi-banner-content d-flex flex-column justify-content-center">
        <div class="container">
          <div class="row">
            <div class="col-lg-7 bxi-zi-2">
          <h2 class="bxi-main-header-xl lh-1 bxi-ff-secondary bxi-banner--text my-4">{{settings.home_page.banner.title}}</h2>
          <h5 class="bxi-banner--text fw-bold mb-5">{{settings.home_page.banner.subtitle}}</h5>
          </div>
          </div>
        </div>
      </div>
    </section>
    <section class="bxi-order-form">
      <div class="bxi-order-form__bg"></div>
      <div class="container overflow-x-hidden bxi-order d-flex flex-column justify-content-center mb-5">
        <h5 class="bxi-ff-secondary mt-5">{{settings.home_page.order_form.title}}</h5>
        <div class="row ps-4 pe-4">
          <div class="col-lg-5">
            {{#each settings.home_page.order_form.inputs}}
            <div class="bxi-input-container me-0 me-lg-3 mb-2 mt-5 ms-3 pt-2">
              <input class="border-0 pt-1" type="text" placeholder="{{placeholder}}" />
            </div>
            {{/each}}
            <button type="button" class="bxi-button bx-button--xl d-block mx-auto mt-5 pt-3 pb-3">{{settings.home_page.order_form.button}}</button>
          </div>
          <div class="col-lg-7">
            <img src="{{settings.home_page.order_form.image}}" />
          </div>
        </div>
      </div>
    </section>
    <section class="bxi-discounts-section">
    <div class="container">
      <h1 class="bxi-ff-secondary bxi-main-header fw-bold mt-5 mb-4 text-center">{{settings.home_page.discounts_section.title}}</h1>
        <div class="row bxi-discounts-row">
          {{#each settings.home_page.discounts_section.discounts}}
          <div class="col-lg-6 col-xl-3">
            <div class="mb-5 d-flex p-4 flex-column overflow-hidden bxi-discounts-section-discount position-relative">
              <img class="product-img align-items-center" src="{{image}}" />
              <div class="bxi-discount-body d-flex flex-column">
                <div class="row">
                  <div class="col-md-7">
                  <h6 class="position-relative bxi-discounts-section__text bxi-zi-2 fw-bold">{{item}}</h6>
                  <p class="position-relative bxi-discounts-section__text-small bxi-zi-2">{{amount}}</p>
                  <p class="position-relative bxi-discounts-section__text-st bxi-zi-2 fw-bold text-danger m-0">{{price}}</p>
                  <h5 class="position-relative bxi-discounts-section__text bxi-zi-2 fw-bold">{{new_price}}</h5>
                  </div>
                  <button class="bxi-button bxi-button--icon bxi-button--lg mt-5 mb-3 mb-lg-0 ms-3">
                    {{> groceryIcon }}
                  </button>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </section>
    <footer class="bxi-footer pt-5 pb-4">
      <div class="container">
        <div class="d-block mb-sm-3 mb-4 d-lg-flex justify-content-between">
          <ul class="d-none d-md-flex flex-wrap mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4 mb-2"><a class="bxi-link bxi-link-light--primary">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts d-flex flex-column-reverse flex-md-row align-items-center align-items-md-start">
            <div class="footer-support me-0 me-md-4">
              <button class="bxi-button bxi-button--md py-3 bxi-button--outline mt-1">Online Support</button>
            </div>
            <div class="ms-0 ms-md-3">
              <ul class="d-flex align-items-center ls-none ps-0">
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <section class="container">
        <p class="fs-8 m-0 text-md-start bxi-copyright-color">{{settings.footer.copyright}}</p>
        {{> remix }}
      </section>
    </footer>
    {{> modal}}
  </body>
</html>