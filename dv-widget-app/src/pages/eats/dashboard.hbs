<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> eatsBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi eats dashboard">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg flex-wrap p-0">
        <div class="container py-2">
          <div class="bxi-nav">
            <a class="bxi-nav-toggle" role="button">
              {{> hamburgerIcon }}
            </a>
            <ul class="bxi-nav-links bxi-bg-secondary">
              <li>
                <button class="bxi-button rounded-0 d-flex mb-2 px-3 d-lg-none text-nowrap align-items-center bxi-icon-color-white">
                  {{> hamburgerIcon class="me-2"}}{{settings.header.main_link}}
                </button>
              </li>
              {{#each settings.header.links}}
              <li>
                <a class="bxi-link bxi-link-light--primary">{{this}}</a>
              </li>
              {{/each}}
            </ul>
            <a id="bxi-logo" class="navbar-brand py-0 ms-3">
              <img src="{{settings.images.logo}}" alt="Logo" />
            </a>
            <button class="bxi-button rounded-0 d-none d-lg-flex px-3 align-items-center bxi-icon-color-white">
              {{> hamburgerIcon class="me-2"}}{{settings.header.main_link}}
            </button>
          </div>
          <div class="d-flex flex-row position-relative align-items-center">
            {{> groceryIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary"}}
            {{> favoriteIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary"}}
            {{> bellIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary" }}
            <p id="username-container" class="bxi-color-primary fw-bold d-none d-sm-flex mb-0 pt-0 me-2 mt-lg-0">{{settings.dashboard.username}}</p>
            <div class="bxi-user-icon d-flex d-lg-none bxi-bg-primary">
              {{> userIcon }}
            </div>
            <div class="d-none d-lg-flex static-user-icon me-2">
              {{> userIcon }}
            </div>
            <div class="bxi-auth-buttons bxi-auth-buttons--secondary-link bxi-bg-primary bxi-zi-2 pb-1 pb-lg-0 bxi-bg-lg-transparent">
              <button onclick="bxi.logout()" class="bxi-button mb-1 mb-lg-0">Log Out</button>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-dashboard position-relative d-flex align-items-end">
      <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-end mt-4">
          {{!-- See src/dashboard-buttons.hbs to update dashboard buttons --}}
          {{> dashboardButtons}}
        </div>
        <h1 class="bxi-ff-secondary bxi-main-header fw-bold mb-2 mt-3">{{settings.dashboard.title}}</h1>
        <h2 class="bxi-color-primary bxi-ff-secondary fw-bold mb-4">{{settings.dashboard.description}}</h2>
        <div class="row bxi-stretch-third-md">
          {{#each settings.dashboard.categories}}
          <div class="col-md-6 col-lg-4">
            <div class="bxi-categories mb-4 d-flex p-4 flex-column align-items-start overflow-hidden position-relative">
              <div class="img-wrapper"><img class="position-absolute top-50 start-50 translate-middle bxi-img-cover" src="{{background_image}}" /></div>
              <h1 class="position-relative bxi-categories-section--text bxi-zi-2 fw-bold mb-0">{{percentage}}</h1>
              <h5 class="position-relative bxi-categories-section--text bxi-zi-2 fw-bold mb-5">{{category}}</h5>
              <button class="bxi-button bxi-bg-primary fw-bold position-relative mt-5 mb-4 py-3 px-5">{{button}}</button>
            </div>
          </div>
          {{/each}}
        </div>
        <div class="row mt-5">
          <div class="col-lg-7 col-xl-8 mb-5">
            <div class="bxi-eats-portal rounded-2 mb-4 p-2">
              <h1 class="bxi-eats-portal--header bxi-ff-secondary mt-3 ms-4 mb-4">{{settings.dashboard.portal.title}}</h1>
              {{#each settings.dashboard.portal.orders}}
              <div class="d-flex justify-content-between bxi-checklist-item py-3 px-5">
                <div class="d-flex align-items-center">
                  <div class="bxi-checkmark d-flex justify-content-center align-items-center rounded-circle bxi-checkmark--checked">
                    {{> checkmarkIcon}}
                  </div>
                  <div class="ms-4">
                    <h5 class="bxi-eats-dashboard--color fw-bold mb-0">{{date}}</h5>
                    <p class="bxi-eats-portal--text mb-0">{{items}}</p>
                  </div>
                </div>
                <button class="bxi-document bxi-button bxi-button--link d-flex flex-nowrap align-items-center">
                  {{> documentIcon class='me-0'}}
                  <span class="d-inline-block ms-2 bxi-document--color ms-0">{{button}}</span>
                </button>
              </div>
              {{/each}}
            </div>
            {{#if env.BXI_DASHBOARD_POLICY_ID}}
            <div class="mb-3" data-dv-flow="static" data-policy-id="{{env.BXI_DASHBOARD_POLICY_ID}}"></div>
            {{/if}}
          </div>
          <div class="col-lg-5 col-xl-4">
            <div class="col-sm-12 col-md-4 col-lg-12 mb-4">
              <div class="bxi-eats-sidebar rounded-2 pb-5">
                <h1 class="bxi-eats-portal--header bxi-eats-dashboard--color bxi-ff-secondary fw-bold ms-0 pt-4 text-center ">{{settings.dashboard.sidebar.title}}</h1>
                <div class="bxi-finance-card text-center bxi-bg-primary pb-1 mt-4">
                  <p class="bxi-finance-card--description pt-3 mb-1">{{settings.dashboard.sidebar.card.description}}</p>
                  <h1 class="bxi-main-header bxi-ff-secondary">{{settings.dashboard.sidebar.card.amount}}</h1>
                  <div class="bxi-finance-card--line mb-4"></div>
                </div>
                <a class="bxi-link text-center fw-bold d-block mt-5 mx-auto">{{settings.dashboard.sidebar.card.link}}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <footer class="bxi-footer pt-5 pb-4">
      <div class="container">
        <div class="d-block mb-sm-3 mb-4 d-lg-flex justify-content-between">
          <ul class="d-none d-md-flex flex-wrap mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4 mb-2"><a class="bxi-link bxi-link-light--primary">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts d-flex flex-column-reverse flex-md-row align-items-center align-items-md-start">
            <div class="footer-support me-0 me-md-4">
              <button class="bxi-button bxi-button--md py-3 bxi-button--outline mt-1">Online Support</button>
            </div>
            <div class="ms-0 ms-md-3">
              <ul class="d-flex align-items-center ls-none ps-0">
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <section class="container">
        <p class="fs-8 m-0 text-md-start bxi-copyright-color">{{settings.footer.copyright}}</p>
        {{> remix }}
      </section>
    </footer>
    {{> modal}}
  </body>
</html>