<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> retailBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi retail dashboard">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg flex-wrap bxi-component-bg-color py-3">
        <div class="container">
          <div class="bxi-nav">
            <a class="bxi-nav-toggle d-xl-none" role="button">
              {{> hamburgerIcon }}
            </a>
            <ul class="bxi-nav-links bxi-bg-secondary">
              {{#each settings.header.links}}
              <li>
                <a class="bxi-link bxi-link--white">{{this}}</a>
              </li>
              {{/each}}
            </ul>
            <a id="bxi-logo" class="navbar-brand py-0 ms-3 ms-lg-0">
              <img src="{{settings.images.logo}}" alt="Logo" />
            </a>
          </div>
          <div class="d-none d-xl-block flex-grow-1 ms-3">
            <ul class="navbar-nav mt-2">
              {{#each settings.header.links}}
              <li class="nav-item pb-2">
                <a class="bxi-link bxi-link--primary fs-6 ps-0 pe-lg-4">{{this}}</a>
              </li>
              {{/each}}
            </ul>
          </div>
          <div class="d-flex flex-row position-relative">
            {{> bellSolidIcon class="bxi-icon-color-primary me-3 d-lg-block d-none" }}
            {{> pinSolidIcon class="bxi-icon-color-primary me-3 d-lg-block d-none" }}
            {{> cartIcon class="bxi-icon-color-primary me-3 d-lg-block d-none" }}
            <div class="bxi-user-icon bxi-bg-primary">
              {{> userIcon }}
            </div>
            <div class="bxi-auth-buttons bxi-auth-buttons--primary-link bxi-bg-secondary bxi-bg-lg-transparent p-2 p-lg-0 px-lg-3">
              {{> userIcon class="d-none bxi-icon-color-primary d-lg-inline me-3 bxi-retail-user-icon"}}
              <button onclick="bxi.logout()" class="bxi-button">Log Out</button>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-bg-primary">
      <div class="container py-3">
        <div class="d-flex flex-column flex-md-row justify-content-center justify-content-md-between align-items-center">
          <h2 class="mb-0 bxi-welcome-color bxi-ff-secondary">{{settings.dashboard.welcome}} <span id="username-container">{{settings.dashboard.username}}</span></h2>
          <div class="d-flex flex-column flex-md-row justify-content-end bxi-dashboard-buttons">
            {{!-- See src/dashboard-buttons.hbs to update dashboard buttons --}}
            {{> dashboardButtons}}
          </div>
        </div>
      </div>
    </section>
    <section class="portal">
      <div class="container">
        <div class="row mt-4">
          <div class="col-lg-4 order-2 order-lg-1 mb-5">
            <ul class="ls-none ps-0 mb-4 bxi-portal-sidebar">
              {{#each settings.dashboard.sidebar.links}}
              <li class="mb-2 ps-5 py-3 px-3 bxi-component-bg-color position-relative portal-sidebar-dropdown cursor-pointer">
                {{this}}
              </li>
              {{/each}}
            </ul>
            <p class="text-center bxi-ff-secondary fs-7">
              {{settings.dashboard.sidebar.text}}
            </p>
            <div class="d-flex justify-content-center flex-wrap">
              {{#each settings.dashboard.sidebar.logos}}
                <div class="portal-sidebar-logo mx-1">
                  {{{inlineSvg this }}}
                </div>
              {{/each}}
            </div>
          </div>
          <div class="col-lg-8 order-1 order-lg-2">
            <div class="row mb-3">
              <div class="col-sm-4 text-center text-sm-start">
                <h4 class="mb-3 mb-sm-0 mt-1 bxi-ff-secondary fw-bold">{{settings.dashboard.portal.title}}</h4>
              </div>
              <div class="col-sm-8 d-flex justify-content-center justify-content-sm-end">
                <div class="position-relative">
                  {{> searchIcon class="position-absolute bxi-search-icon bxi-icon-color-primary"}}
                  <input class="rounded p-1 ps-4" type="text" placeholder="Search" />
                  <span class="bxi-color-primary ms-2">
                    {{> sortIcon class="bxi-icon-color-primary"}}
                    Sort
                  </span>
                </div>
              </div>
            </div>
            <div class="row mt-3 pe-4 fs-7 mb-2">
              <div class="col-md-4 text-center text-md-start text-truncate">
                Showing 1-6 of 234 results
              </div>
              <div class="col-md-4 text-center">
                Items per Page: <span class="items-per-page px-1">6</span>
              </div>
              <div class="col-md-4 d-flex justify-content-center justify-content-md-end">
                <div class="pagination position-relative mt-2 mt-md-0">
                  <span class="px-2 py-1 cursor-pointer">1</span>
                  <span class="px-2 py-1 cursor-pointer">2</span>
                  <span class="px-2 py-1 cursor-pointer">3</span>
                  <span class="px-2 py-1 cursor-pointer">4</span>
                </div>
              </div>
            </div>
            <div class="row mb-3 g-3">
              {{#each settings.dashboard.portal.products}}
              <div class="col-sm-6 col-xxl-4">
                <div class="bxi-component-bg-color p-3">
                  <img class="w-100 h-auto" src="{{image}}" alt="{{title}}" />
                  <p class="bxi-color-primary mb-1 product-title overflow-hidden">{{title}}</p>
                  <img src="{{rating_image}}" alt="{{title}} rating" />
                  <p class="fs-3 mb-2 fw-light">{{price}} <small class="fs-8 fw-light">{{price_subtext}}</small></p>
                  {{#each delivery_options}}
                  <p class="fs-8 fw-light mb-2">{{this}}</p>
                  {{/each}}
                  <button class="bxi-button bxi-button--md mt-3">{{> cartIcon class="me-2 cart-icon"}}Add to Cart</button>
                </div>
              </div>
              {{/each}}
            </div>

            {{#if env.BXI_DASHBOARD_POLICY_ID}}
            <div class="mb-4 bxi-component-bg-color" data-dv-flow="static" data-policy-id="{{env.BXI_DASHBOARD_POLICY_ID}}"></div>
            {{/if}}
          </div>
        </div>
      </div>
    </section>
    <footer class="bxi-footer py-5">
      <div class="container text-center text-lg-start">
        <div class="row">
          <div class="col-lg-3 mb-3">
            <ul class="d-flex justify-content-center justify-content-lg-start ls-none ps-0 mb-3">
              <li>
                <button class="bxi-button bxi-button--outline bxi-button--icon me-lg-3 me-5">
                  {{> facebookIcon }}
                </button>
              </li>
              <li>
                <button class="bxi-button bxi-button--outline bxi-button--icon me-lg-3 me-5">
                  {{> twitterIcon }}
                </button>
              </li>
              <li>
                <button class="bxi-button bxi-button--outline bxi-button--icon">
                  {{> instagramIcon }}
                </button>
              </li>
            </ul>
            <p class="mb-3 mb-md-0 fs-8 bxi-copyright-color">{{settings.footer.copyright}}</p>
          </div>
          <div class="col-lg-3 mb-3">
            {{#each settings.footer.navigation.links_left}}
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6">{{this}}</a>
            {{/each}}
          </div>
          <div class="col-lg-3 mb-3">
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6 fw-bold">{{settings.footer.phone_number}}</a>
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6 fw-bold">{{settings.footer.email}}</a>
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6 fw-bold">{{settings.footer.chat}}</a>
          </div>
          <div class="col-lg-3 mb-3">
            {{#each settings.footer.navigation.links_right}}
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6">{{this}}</a>
            {{/each}}
          </div>
        </div>
      </div>
      {{> remix }}
    </footer>
    {{> modal}}
  </body>
</html>