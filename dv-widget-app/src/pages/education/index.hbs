<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> educationBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi education home">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg flex-wrap p-0">
        <div class="container py-2">
          <div class="bxi-nav">
            <a class="bxi-nav-toggle" role="button">
              {{> hamburgerIcon }}
            </a>
            <ul class="bxi-nav-links bxi-bg-secondary">
              {{#each settings.header.links}}
              <li>
                <a class="bxi-link bxi-link-light--primary">{{this}}</a>
              </li>
              {{/each}}
            </ul>
            <a id="bxi-logo" class="navbar-brand py-0 ms-3">
              <img src="{{settings.images.logo}}" alt="Logo" />
            </a>
          </div>
          <div class="d-flex flex-row position-relative">
            <div class="bxi-user-icon bxi-bg-primary">
              {{> userIcon }}
            </div>
            <div class="bxi-auth-buttons bxi-bg-secondary bxi-bg-lg-transparent bxi-zi-2 pb-2 pb-lg-0">
              {{> notificationIcon class="d-none d-lg-block me-4 mt-1 bxi-icon-color-secondary notification-icon" }}
              {{!-- See src/home-nav-buttons.hbs to update auth buttons --}}
              {{> homeNavButtons }}
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-banner-bg-color py-5 bxi-banner overflow-hidden bxi-bg-image position-relative d-flex align-items-center mb-5">
      <div class="container">
        <div class="row">
          <div class="col-md-6 px-0 d-flex justify-content-center mb-4">
            <div class="bxi-banner-image-container">
              <div class="bxi-banner-image-first-circle bxi-zi-3 position-absolute top-0 start-0 bxi-bg-primary rounded-circle"></div>
              <div class="bxi-banner-image-second-circle bxi-zi-3 position-absolute rounded-circle"></div>
              <div class="bxi-banner-image-third-circle bxi-zi-1 position-absolute rounded-circle"></div>
              <img class="bxi-banner-image w-100 h-auto position-relative rounded-circle bxi-zi-2" src="{{settings.home_page.banner.image}}" />
            </div>
          </div>
          <div class="col-md-6 d-flex flex-column align-items-start justify-content-center">
            <div class="ps-3 ps-lg-0">
              <h1 class="bxi-banner-color bxi-main-header bxi-ff-secondary mb-4">{{settings.home_page.banner.title}}</h1>
              <h4 class="bxi-banner-color mb-5">{{settings.home_page.banner.subtitle}}</h4>
              {{#if settings.home_page.banner.button}}
              <button class="bxi-button bxi-button--lg px-5">{{settings.home_page.banner.button}}</button>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      <div class="bxi-banner-circle rounded-circle position-absolute"></div>
    </section>
    <section class="container my-5">
      <h1 class="bxi-main-header bxi-color-secondary bxi-ff-secondary">{{settings.home_page.programs_section.title}}</h1>
      <div class="row">
        {{#each settings.home_page.programs_section.programs}}
        <div class="col-md-4">
          <div class="bxi-program mb-4 overflow-hidden position-relative cursor-pointer">
            <img class="bxi-img-cover position-absolute top-50 start-50 translate-middle" src="{{image}}" />
            <div class="w-100 h-100 bxi-program-overlay position-relative bxi-zi-2 d-flex align-items-end justify-content-center">
              <h4 class="bxi-program-color mb-4 fw-bold">{{title}}</h4>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </section>
    <footer class="bxi-footer pt-5 pb-4">
      <div class="container">
        <div class="d-block mb-sm-3 mb-4 d-lg-flex justify-content-between">
          <ul class="d-none d-md-flex flex-wrap mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4 mb-2"><a class="bxi-link bxi-link-light--primary">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts d-flex flex-column-reverse flex-md-row align-items-center align-items-md-start">
            <div class="footer-support me-0 me-md-4">
              <div class="text-center text-md-start mb-3 fs-6">{{settings.footer.phone_number}}</div>
              <button class="bxi-button bxi-button--md py-3 bxi-button--outline mt-1">Online support</button>
            </div>
            <div class="ms-0 ms-md-3">
              <div class="ms-0 mb-3 text-center text-md-start fs-6">FOLLOW US:</div>
              <ul class="d-flex align-items-center ls-none ps-0">
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <section class="bxi-footer bxi-copyright-bg-color py-4">
      <div class="container">
        <p class="fs-8 m-0 text-md-start bxi-copyright-color">{{settings.footer.copyright}}</p>
        {{> remix }}
      </div>
    </section>
    {{> modal}}
  </body>
</html>