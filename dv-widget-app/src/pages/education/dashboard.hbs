<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> educationBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi education dashboard">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg flex-wrap p-0">
        <div class="container py-2">
          <div class="bxi-nav">
            <a class="bxi-nav-toggle" role="button">
              {{> hamburgerIcon }}
            </a>
            <ul class="bxi-nav-links bxi-bg-secondary">
              {{#each settings.header.links}}
              <li>
                <a class="bxi-link bxi-link-light--primary">{{this}}</a>
              </li>
              {{/each}}
            </ul>
            <a id="bxi-logo" class="navbar-brand py-0 ms-3">
              <img src="{{settings.images.logo}}" alt="Logo" />
            </a>
          </div>
          <div class="d-flex flex-row position-relative align-items-center">
            {{> notificationIcon class="d-none d-lg-block me-3 bxi-icon-color-secondary notification-icon" }}
            <p id="username-container" class="bxi-color-primary fw-bold d-none d-sm-flex mb-0 pt-0 me-2 mt-lg-0">{{settings.dashboard.username}}</p>
            <div class="bxi-user-icon d-flex d-lg-none bxi-bg-primary">
              {{> userIcon }}
            </div>
            <div class="d-none d-lg-flex static-user-icon me-2">
              {{> userIcon }}
            </div>
            <div class="bxi-auth-buttons bxi-auth-buttons--secondary-link bxi-bg-primary bxi-zi-2 pb-1 pb-lg-0 bxi-bg-lg-transparent">
              <button onclick="bxi.logout()" class="bxi-button mb-1 mb-lg-0">Log Out</button>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-bg-secondary">
      <div class="container py-4 d-flex flex-nowrap bxi-overflow-x-auto">
        {{#each settings.dashboard.links}}
        <a class="bxi-link bxi-link-light--primary me-4 text-nowrap">{{this}}</a>
        {{/each}}
      </div>
    </section>
    <section class="container">
      <div class="d-flex flex-column flex-md-row justify-content-end mt-4">
        {{!-- See src/dashboard-buttons.hbs to update dashboard buttons --}}
        {{> dashboardButtons}}
      </div>
      <div class="row mt-5">
        <div class="col-lg-7 col-xl-8 mb-5">
          <div class="bxi-education-portal rounded-2 mb-4">
            <div class="px-5 py-4">
              <h6 class="bxi-education-dashboard--color">{{settings.dashboard.portal.header}}</h6>
              <h1 class="bxi-main-header bxi-ff-secondary">{{settings.dashboard.portal.program}}</h1>
              {{#each settings.dashboard.portal.summary_items}}
              <h6 class="bxi-education-dashboard--color">{{this}}</h6>
              {{/each}}
            </div>
            {{#each settings.dashboard.portal.checklist}}
            <div class="d-flex justify-content-between bxi-checklist-item py-4 px-5">
              <div class="d-flex align-items-center">
                <div class="bxi-checkmark d-flex justify-content-center align-items-center rounded-circle{{#if complete}} bxi-checkmark--checked{{/if}}">
                  {{> checkmarkIcon}}
                </div>
                <div class="ms-3">
                  <h5 class="bxi-education-dashboard--color fw-bold mb-0">{{name}}</h5>
                </div>
              </div>
              <div class="bxi-checklist-time d-flex flex-nowrap align-items-center">
                {{> timerIcon }}
                <span class="d-inline-block ms-2 bxi-checklist-time--color">{{time}}</span>
              </div>
            </div>
            {{/each}}
          </div>
          {{#if env.BXI_DASHBOARD_POLICY_ID}}
          <div class="mb-3" data-dv-flow="static" data-policy-id="{{env.BXI_DASHBOARD_POLICY_ID}}"></div>
          {{/if}}
        </div>
        <div class="col-lg-5 col-xl-4">
          <h1 class="bxi-main-header bxi-education-dashboard--color bxi-ff-secondary">{{settings.dashboard.sidebar.title}}</h1>
          <div class="row">
            {{#each settings.dashboard.sidebar.articles}}
            <div class="col-sm-12 col-md-4 col-lg-12">
              <div class="bxi-program mb-4 overflow-hidden rounded-2 position-relative cursor-pointer">
                <img class="bxi-img-cover position-absolute top-50 start-50 translate-middle" src="{{image}}" />
                <div class="w-100 h-100 bxi-program-overlay position-relative bxi-zi-2 d-flex align-items-end justify-content-center">
                  <h5 class="bxi-program-color p-4 fw-bold">{{title}}</h5>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </section>
    <footer class="bxi-footer pt-5 pb-4">
      <div class="container">
        <div class="d-block mb-sm-3 mb-4 d-lg-flex justify-content-between">
          <ul class="d-none d-md-flex flex-wrap mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4 mb-2"><a class="bxi-link bxi-link-light--primary">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts d-flex flex-column-reverse flex-md-row align-items-center align-items-md-start">
            <div class="footer-support me-0 me-md-4">
              <div class="text-center text-md-start mb-3 fs-6">{{settings.footer.phone_number}}</div>
              <button class="bxi-button bxi-button--md py-3 bxi-button--outline mt-1">Online support</button>
            </div>
            <div class="ms-0 ms-md-3">
              <div class="ms-0 mb-3 text-center text-md-start fs-6">FOLLOW US:</div>
              <ul class="d-flex align-items-center ls-none ps-0">
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <section class="bxi-footer bxi-copyright-bg-color py-4">
      <div class="container">
        <p class="fs-8 m-0 text-md-start bxi-copyright-color">{{settings.footer.copyright}}</p>
        {{> remix }}
      </div>
    </section>
    {{> modal}}
  </body>
</html>