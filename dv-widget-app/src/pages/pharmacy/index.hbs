<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> pharmacyBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi pharmacy home">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg flex-wrap p-0">
        <div class="container py-2">
          <div class="bxi-nav">
            <a class="bxi-nav-toggle" role="button">
              {{> hamburgerIcon }}
            </a>
            <ul class="bxi-nav-links bxi-bg-secondary">
              {{#each settings.header.links}}
              <li>
                <a class="bxi-link bxi-link-light--primary">{{this}}</a>
              </li>
              {{/each}}
            </ul>
            <a id="bxi-logo" class="navbar-brand py-0 ms-3">
              <img src="{{settings.images.logo}}" alt="Logo" />
            </a>
          </div>
          <div class="d-flex flex-row position-relative">
            <div class="bxi-user-icon bxi-bg-primary">
              {{> userIcon }}
            </div>
            <div class="bxi-auth-buttons bxi-bg-secondary bxi-bg-lg-transparent bxi-zi-2 pb-2 pb-lg-0">
              {{!-- See src/home-nav-buttons.hbs to update auth buttons --}}
              {{> homeNavButtons }}
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-banner bxi-bg-image position-relative d-flex align-items-end" style="background-image: url('{{settings.home_page.banner.background_image}}')">
      <div class="bxi-banner-content d-flex flex-column justify-content-center w-100">
        <div class="container">
          <h1 class="bxi-banner-content-color bxi-main-header-xl text-center bxi-ff-secondary lh-1 mx-xl-5 px-xl-5">{{settings.home_page.banner.title}}</h1>
          <h5 class="bxi-banner-content-color text-center pt-4">{{settings.home_page.banner.subtitle}}</h5>
        </div>
      </div>
    </section>
    <section class="bxi-services container mb-5 pb-5 bxi-zi-2 pt-3 pt-lg-0">
      <div class="row bxi-services-bg-color">
        {{#each settings.home_page.services}}
        <div class="col-lg-4 py-4 px-3 d-flex flex-column bxi-service">
          <div class="pb-3">{{{inlineSvg icon}}}</div>
          <h2 class="bxi-color-secondary bxi-ff-secondary fw-bold mb-2">{{title}}</h2>
          <h5 class="bxi-color-secondary bxi-services-description-color pb-5">{{description}}</h5>
          <button class="bxi-button bxi-button--outline w-100 pb-2 text-uppercase mt-auto">{{button}}<span class="fs-5 ms-3">&rarr;</span></button>
        </div>
        {{/each}}
      </div>
    </section>
    <footer class="bxi-footer pt-5 pb-4">
      <div class="container">
        <div class="d-block mb-sm-3 mb-4 d-lg-flex justify-content-between">
          <ul class="d-none d-md-flex flex-wrap mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4 mb-2"><a class="bxi-link bxi-link--secondary">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts d-flex flex-column-reverse flex-md-row align-items-center align-items-md-start">
            <div class="">
              <ul class="d-flex align-items-center mb-0 ls-none ps-0">
                <li>
                  <button class="bxi-button bxi-button--icon bxi-button--md me-md-3 me-5 rounded-circle">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--icon bxi-button--md me-md-3 me-5 rounded-circle">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--icon bxi-button--md rounded-circle">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <section class="bxi-footer bxi-copyright-bg-color py-4">
      <div class="container">
        <p class="fs-8 m-0 text-center text-md-start bxi-copyright-color">{{settings.footer.copyright}}</p>
        {{> remix }}
      </div>
    </section>
    {{> modal}}
  </body>
</html>