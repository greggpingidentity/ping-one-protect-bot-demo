<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link id="favicon" rel="icon" href="{{favicon}}" />
  <link id="apple-touch-icon" rel="apple-touch-icon" href="{{appleTouchIcon}}" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Starter app for your demos" />

  {{! Import bootstrap }}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/styles.css" />

  {{> (brandingPartial)}}
</head>
<body class="bxi {{vertical}}">
  <div class="container">
    <h2 class="my-3"><span class="text-uppercase">{{vertical}} Dialog Examples</span></h2>
    <button id="all-elements" class="bxi-button bxi-button--lg me-3 mb-3">All Dialog Elements</button>
    <button id="registration" class="bxi-button bxi-button--lg me-3 mb-3">Registration</button>
    <button id="sign-in-username" class="bxi-button bxi-button--lg me-3 mb-3">Sign In - Username Only</button>
    <button id="sign-in-username-password" class="bxi-button bxi-button--lg me-3 mb-3">Sign In - Username and Password</button>
    <button id="sign-in-mfa-picker" class="bxi-button bxi-button--lg me-3 mb-3">Sign In - MFA Picker</button>
    <button id="sign-in-sms-otp" class="bxi-button bxi-button--lg me-3 mb-3">Sign In - SMS OTP</button>
    <button id="sign-in-email-otp" class="bxi-button bxi-button--lg me-3 mb-3">Sign In - Email OTP</button>
    <button id="sign-in-mobile-app" class="bxi-button bxi-button--lg me-3 mb-3">Sign In - Mobile App</button>
    <button id="username-recovery" class="bxi-button bxi-button--lg me-3 mb-3">Username Recovery</button>
    <button id="username-recovery-confirmation" class="bxi-button bxi-button--lg me-3 mb-3">Username Recovery Confirmation</button>
    <button id="password-recovery-create-new-password" class="bxi-button bxi-button--lg me-3 mb-3">Password Recovery - Create New Password</button>
    <button id="password-recovery-email-otp" class="bxi-button bxi-button--lg me-3 mb-3">Password Recovery - Email OTP</button>
    <button id="password-recovery-username" class="bxi-button bxi-button--lg me-3 mb-3">Password Recovery - Username Entry</button>
    <button id="password-recovery-confirmation" class="bxi-button bxi-button--lg me-3 mb-3">Password Recovery - Confirmation</button>
  </div>
  <div id="example-modal" class="modal dialog" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <div class="d-flex justify-content-center dialog-logo mb-4">
            <img src="{{ dialogLogo }}" />
          </div>
          <div id="example-container"></div>
        </div>
      </div>
    </div>
  </div>
  {{> remix}}
  <script type="text/javascript">
    (function () {
      const templateMap = {
        'all-elements': `
          {{> allElementsTemplate}}
        `,
        'registration': `
          {{> registrationTemplate}}
        `,
        'sign-in-username': `
          {{> signInUsernameTemplate}}
        `,
        'sign-in-username-password': `
          {{> signInUsernamePasswordTemplate}}
        `,
        'sign-in-mfa-picker': `
          {{> signInMfaPickerTemplate}}
        `,
        'sign-in-sms-otp': `
          {{> signInSmsOtpTemplate}}
        `,
        'sign-in-email-otp': `
          {{> signInEmailOtpTemplate}}
        `,
        'sign-in-mobile-app': `
          {{> signInMobileAppTemplate}}
        `,
        'username-recovery': `
          {{> usernameRecoveryTemplate}}
        `,
        'username-recovery-confirmation': `
          {{> usernameRecoveryConfirmationTemplate}}
        `,
        'password-recovery-create-new-password': `
          {{> passwordRecoveryCreateNewPasswordTemplate}}
        `,
        'password-recovery-email-otp': `
          {{> passwordRecoveryEmailOtpTemplate}}
        `,
        'password-recovery-username': `
          {{> passwordRecoveryUsernameTemplate}}
        `,
        'password-recovery-confirmation': `
          {{> passwordRecoveryConfirmationTemplate}}
        `,
      };

      Object.keys(templateMap).forEach(id => {
        document.getElementById(id).addEventListener('click', () => {
          const htmlContainer = document.getElementById('example-container');
          htmlContainer.innerHTML = templateMap[id];
          
          const modal = new bootstrap.Modal('#example-modal');
          modal.show();
          
          document.getElementById('example-modal').addEventListener('hidden.bs.modal', () => {
            htmlContainer.innerHTML = '';
          });
        });
      })
    })();
  </script>
</body>
</html>