<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> insuranceBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi insurance dashboard">
    {{> variables}}
    <header class="bxi-header">
      <nav class="navbar navbar-expand-lg flex-wrap p-0">
        <div class="container py-2">
          <div class="bxi-nav">
            <a class="bxi-nav-toggle d-block d-lg-none" role="button">
              {{> hamburgerIcon }}
            </a>
            <ul class="bxi-nav-links bxi-bg-secondary">
              {{#each settings.header.links}}
              <li>
                <a class="bxi-link bxi-link-light--primary">{{this}}</a>
              </li>
              {{/each}}
            </ul>
            <a id="bxi-logo" class="navbar-brand py-0 ms-3 ms-lg-0">
              <img src="{{settings.images.logo}}" alt="Logo" />
            </a>
          </div>
          <div class="d-flex flex-row position-relative">
            <p id="username-container" class="bxi-color-primary fw-bold d-none d-sm-flex mb-0 me-2">{{settings.dashboard.username}}</p>
            <div class="bxi-user-icon d-flex d-lg-none bxi-bg-primary">
              {{> userIcon }}
            </div>
            <div class="d-none d-lg-flex static-user-icon">
              {{> userIcon }}
            </div>
            <div class="bxi-auth-buttons bxi-auth-buttons--secondary-link bxi-bg-primary pb-2 pb-lg-0 bxi-bg-lg-transparent">
              <button onclick="bxi.logout()" class="bxi-button mb-1 mb-lg-0 fw-bold">Log Out</button>
            </div>
          </div>
        </div>
        <div class="bxi-bg-secondary w-100">
          <div class="container">
            <div class="bxi-navbar bxi-bg-secondary d-none d-lg-block bxi-zi-3">
              <ul class="navbar-nav p-2 pb-0 py-lg-3 px-lg-0 d-flex justify-content-between w-100">
                {{#each settings.header.links}}
                <li class="nav-item mb-2 mb-lg-0">
                  <a class="bxi-link bxi-link-light--primary text-uppercase fs-7">{{this}}</a>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="container mt-3">
      <div class="d-flex flex-column flex-md-row justify-content-end mt-4">
        {{!-- See src/dashboard-buttons.hbs to update dashboard buttons --}}
        {{> dashboardButtons}}
      </div>
      <div class="d-flex flex-column-reverse flex-sm-row justify-content-between align-items-center my-4">
        <h1 class="bxi-main-header bxi-color-secondary bxi-ff-secondary mt-4 mt-sm-0">{{settings.dashboard.portal.header}}</h1>
        {{#if settings.dashboard.portal.button}}
        <button class="bxi-button bxi-button--outline-secondary bxi-button--lg d-flex align-items-center">
          <div class="me-2">{{> gearIcon}}</div>
          <div class="fw-bold">{{settings.dashboard.portal.button}}</div>
        </button>
        {{/if}}
      </div>
      <div class="row">
        {{#each settings.dashboard.portal.services}}
        <div class="col-md-4 d-flex mb-4">
          <div class="bxi-service bxi-component-bg-color w-100 cursor-pointer p-4">
            <div class="mb-3">{{{inlineSvg logo}}}</div>
            <h2 class="fw-bold bxi-ff-secondary bxi-color-secondary">{{title}}</h2>
            <p class="bxi-service-color">{{description}}</p>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="row bxi-bg-secondary mx-0 mt-5">
        <div class="col-md-5 p-5">
          <h1 class="bxi-main-header lh-1 bxi-ff-secondary bxi-advertisement-color">{{settings.dashboard.advertisement.title}}</h1>
          <h4 class="fw-bold mb-4 bxi-advertisement-color">{{settings.dashboard.advertisement.description}}</h4>
          <button class="bxi-button bxi-button--lg">{{settings.dashboard.advertisement.button}}</button>
        </div>
        <div class="col-md-7 position-relative bxi-advertisement-image-container">
          <img class="position-absolute bxi-img-cover top-0 start-0" src="{{settings.dashboard.advertisement.image}}">
        </div>
      </div>
      {{#if env.BXI_DASHBOARD_POLICY_ID}}
      <div class="mb-3 bxi-component-bg-color mt-4" data-dv-flow="static" data-policy-id="{{env.BXI_DASHBOARD_POLICY_ID}}"></div>
      {{/if}}
    </section>
    <footer class="bxi-footer pt-5">
      <div class="container">
        <div class="d-block d-lg-flex justify-content-between mb-sm-3 mb-4">
          <ul class="d-none d-md-flex mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4"><a class="bxi-link bxi-link-light--primary text-nowrap">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts d-flex flex-column-reverse flex-md-row justify-content-start align-items-center align-items-md-start justify-content-md-between justify-content-lg-end">
            <div class="footer-support me-0 me-lg-4">
              <div class="text-center text-md-start mb-3 fw-bold fs-5">{{settings.footer.phone_number}}</div>
              <button class="bxi-button bxi-button--outline fs-8 bxi-button--lg text-nowrap">Online support</button>
            </div>
            <div class="ms-0 ms-md-3">
              <div class="ms-0 mb-3 text-center text-md-start fw-bold fs-5">Follow us:</div>
              <ul class="d-flex align-items-center ls-none ps-0">
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--md me-md-3 me-5">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--md me-md-3 me-5">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--md">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <section class="bxi-footer bxi-bg-secondary pb-4">
      <div class="container">
        <p class="fs-8 m-0 text-center text-md-start bxi-copyright-color">{{settings.footer.copyright}}</p>
        {{> remix }}
      </div>
    </section>
    {{> modal}}
  </body>
</html>